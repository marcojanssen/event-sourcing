<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="spray_event_sourcing.messaging.connection" class="PhpAmqpLib\Connection\AMQPConnection">
            <argument>localhost</argument>
            <argument>5672</argument>
            <argument>guest</argument>
            <argument>guest</argument>
        </service>
        <service id="spray_event_sourcing.messaging.channel" class="PhpAmqpLib\Channel\AMQPChannel"
                 factory-service="spray_event_sourcing.messaging.connection" factory-method="channel">
            <argument>events</argument>
        </service>
    </services>
</container>
